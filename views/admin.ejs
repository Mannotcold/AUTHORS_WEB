                        </li>

                    </ul>

                </div>

            </nav>

        </div>

    </header>

    <main>

        <div>
            <div class="table-wrapper">

                <div class="title">
                    <h1>List User</h1>
                </div>
                <table class="fl-table">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>username</th>
                            <th>email</th>
                            <th>password</th>
                            <th>status</th>
                            <th>user_type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <div><%= JSON.stringify(listusers.length)%></div>

                        <% for (let i=0; i < listusers.length; i++) { %>
                            <tr>
                                <td>
                                    <%= listusers[i].user_id %>
                                </td>
                                <td>
                                    <%= listusers[i].username %>
                                </td>
                                <td>
                                    <%= listusers[i].email %>
                                </td>
                                <td>
                                    <%= listusers[i].password %>
                                </td>
                                <td>
                                    <%= listusers[i].status %>
                                </td>
                                <td>
                                    <%= listusers[i].user_type %>
                                </td>
                                <td>
                                    <a href="/AdminHome/edit_user/<%= listusers[i].id %>" class="button1">
                                        <button>Edit</button>
                                    </a>
                                    <form action="/AdminHome/delete_user/<%= listusers[i].id %>" method="post">
                                        <button>Delete</button>
                                    </form>

                                </td>
                            </tr>
                            <% } %>

                    <tbody>
                </table>
            </div>
        </div>




    </main>

