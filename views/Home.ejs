<body class="light-theme">

  <!--
    - #HEADER
  -->


  <header>

    <div class="container">

      <nav class="navbar">


        <div class="flex-wrapper">

          <ul class="desktop-nav">

            <li>
              <a href="#home" class="nav-link">Home</a>
            </li>

            <li>
              <a href="#introduce" class="nav-link">Introduce</a>
            </li>

            <li>
              <a href="#home" class="nav-link">About</a>
            </li>

            <li>
              <a href="#contact" class="nav-link">Contact</a>
            </li>

          </ul>
          <a href="/Login" class="button1">
            <h1>Login</h1>
          </a>
        </div>

      </nav>


    </div>

  </header>

  <main>

    <!--
      - #HERO SECTION
    -->

    <!-- HERO SECTION -->
    <div id="home" class="hero">
      <div class="container">
        <div class="left">
          <h1 class="h1"><b>Welcome to the Author's Portal</b></h1>
          <h3 class="h3">Showcasing Research and Achievements</h3>
        </div>
        <div class="right">
          <div class="pattern-bg"></div>
          <div class="img-box">
            <img src="/images/Author.jpg" class="hero-img">
          </div>
        </div>
      </div>
    </div>

    </div>


    <div class="main">

      <div class="container">

        <div id="introduce" class="column">
          <div class="introduce">
            <h1>Research Paper Management Portal</h1>
          </div>
          <div class="introduce">
            <h3>Welcome to the Research Paper Management Portal. Our mission is to streamline the process
              of publishing, managing, and discovering scientific papers. Here, researchers can connect,
              collaborate, and share their findings with the world.</h3>
          </div>
        </div>

        <!-- Features Section -->
        <div class="column2">
          <div class="column3">
            <img src="/images/author.jpg" alt="Publish Icon" class="icon">
            <h3>Publish</h3>
            <p>Our platform allows researchers to easily publish their papers and share their discoveries with
              a global audience.</p>
          </div>
          <div class="column3">
            <img src="/images/author.jpg" alt="Manage Icon" class="icon">
            <h3>Manage</h3>
            <p>With our intuitive management tools, researchers can keep track of their publications, updates,
              and collaborations effortlessly.</p>
          </div>
          <div class="column3">
            <img src="/images/author.jpg" alt="Discover Icon" class="icon">
            <h3>Discover</h3>
            <p>Explore a wide range of scientific papers across various topics and find research that inspires
              and informs your work.</p>
          </div>
        </div>

        <div class="topic">
          <h2>Machine Learning</h2>

          <% for (let i=0; i < topic1.length; i++) { %>
            <ul class="article-list">
              <h3>Paper <%= i + 1 %>:</h3>
              <a href="#">
                <%= topic1[i].title %>
              </a>
              <% } %>
            </ul>
        </div>
        <div class="topic">
          <h2>Natural Language Processing</h2>
          <% for (let i=0; i < topic2.length; i++) { %>
            <ul class="article-list">
              <h3>Paper <%= i + 1 %>:</h3>
              <a href="#">
                <%= topic2[i].title %>
              </a>
              <% } %>
            </ul>
        </div>
        <!-- Add more topics as needed -->
        <a href="/SearchPaper">
          <h2>See more</h2>
        </a>

      </div>

    </div>

  </main>

  <div class="map-section">
    <img src="/images/map.png" alt="Map">
  </div>



